{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LogicBridge Ruleset Schema v1.0",
  "description": "JSON Schema for LogicBridge rule files",
  "type": "object",
  "required": ["rules", "version"],
  "properties": {
    "rules": {
      "type": "array",
      "description": "Array of business rules",
      "items": {
        "type": "object",
        "required": ["id", "when", "then"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the rule"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the rule"
          },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high"],
            "description": "Rule severity level"
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Tags for categorizing rules"
          },
          "when": {
            "$ref": "#/definitions/condition",
            "description": "Condition that triggers the rule"
          },
          "then": {
            "type": "object",
            "required": ["outcome"],
            "properties": {
              "outcome": {
                "type": "object",
                "description": "Result when rule is triggered"
              }
            },
            "description": "Action to take when rule matches"
          },
          "generated_by_llm": {
            "type": "boolean",
            "description": "Whether this rule was generated by LLM"
          },
          "prompt_sha": {
            "type": "string",
            "description": "SHA hash of the prompt used to generate this rule"
          },
          "llm_model": {
            "type": "string",
            "description": "LLM model used to generate this rule"
          }
        }
      }
    },
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the ruleset"
    }
  },
  "definitions": {
    "condition": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["and", "or", "not", "equals", "greater_than", "less_than", "contains", "in"]
        }
      },
      "oneOf": [
        {
          "description": "Logical AND condition",
          "properties": {
            "type": {"const": "and"},
            "conditions": {
              "type": "array",
              "items": {"$ref": "#/definitions/condition"},
              "minItems": 1
            }
          },
          "required": ["conditions"],
          "additionalProperties": false
        },
        {
          "description": "Logical OR condition",
          "properties": {
            "type": {"const": "or"},
            "conditions": {
              "type": "array",
              "items": {"$ref": "#/definitions/condition"},
              "minItems": 1
            }
          },
          "required": ["conditions"],
          "additionalProperties": false
        },
        {
          "description": "Logical NOT condition",
          "properties": {
            "type": {"const": "not"},
            "condition": {"$ref": "#/definitions/condition"}
          },
          "required": ["condition"],
          "additionalProperties": false
        },
        {
          "description": "Equality comparison",
          "properties": {
            "type": {"const": "equals"},
            "field": {"type": "string"},
            "value": {}
          },
          "required": ["field", "value"],
          "additionalProperties": false
        },
        {
          "description": "Greater than comparison",
          "properties": {
            "type": {"const": "greater_than"},
            "field": {"type": "string"},
            "value": {"type": "number"}
          },
          "required": ["field", "value"],
          "additionalProperties": false
        },
        {
          "description": "Less than comparison",
          "properties": {
            "type": {"const": "less_than"},
            "field": {"type": "string"},
            "value": {"type": "number"}
          },
          "required": ["field", "value"],
          "additionalProperties": false
        },
        {
          "description": "String contains check",
          "properties": {
            "type": {"const": "contains"},
            "field": {"type": "string"},
            "value": {"type": "string"}
          },
          "required": ["field", "value"],
          "additionalProperties": false
        },
        {
          "description": "Value in list check",
          "properties": {
            "type": {"const": "in"},
            "field": {"type": "string"},
            "values": {
              "type": "array",
              "minItems": 1
            }
          },
          "required": ["field", "values"],
          "additionalProperties": false
        }
      ]
    }
  }
}
